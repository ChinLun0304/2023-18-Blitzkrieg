#define BAUDRATE 9600
#include "vex.h"
#include <string>

using namespace vex;

// A global instance of vex::brain used for printing to the V5 brain screen
vex::brain       Brain;

// define your global instances of motors and other devices here


//motor Arduino = motor(PORT20, ratio18_1, false);


int main() {

    Brain.Screen.printAt( 10, 50, "Hello V5" );
    vexGenericSerialEnable(vex::PORT11, 0);
    vexGenericSerialBaudrate(vex::PORT11, BAUDRATE);
    uint8_t buffer[300];
    
    std::string receivedString(reinterpret_cast<char*>(buffer), 300);

   
    while(1) {
       
        int32_t  check =  vexGenericSerialReceive( vex::PORT11, buffer, 300 );
        Brain.Screen.print("check is: %d", check);
        if (check !=0)
        {
            Brain.Screen.printAt( 10, 50, "Hello orange" );
            // Brain.Screen.print(receivedString);
        }
        

        this_thread::sleep_for(100);
    }
}
